<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Musée du Louvre{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <a class="navbar-brand" href="{{ path('home') }}">
            <img src="/assets/img/logo-homepage.png" alt="Logo du Musée du Louvre" class="logo-louvre">
            Musée du Louvre
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item ">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'booking' %}active{% endif %}" href="{{ path('booking') }}">Réserver</a>
                </li>
            </ul>
            <ul class="navbar-nav m1-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a href="/" class="nav-link ">Français</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">English</a>
                </li>

            </ul>
        </div>
    </nav>
    {% block body %}
    <section class="container-fluid">

    </section>
    {% endblock %}
    <footer class="footer mt-4 py-3 fixed-bottom" style="background-color: #313131;">
        <div class="container text-center">
            <span class="text-muted">©2019 - Musée du Louvre - Billetterie - Réalisée par Marine A.</span>
        </div>
    </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </body>
</html>
